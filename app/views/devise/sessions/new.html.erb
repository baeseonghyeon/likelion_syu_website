<%= render '/posts/logo' %>
<div class="d_main">
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :confirmation_token %>
  <p class=“notice’><%= notice %></p>
  <p class=“alert’><%= alert %></p>

    <div class="form-inputs">
      <div class="d_inputbox2">
        <%= f.input :email, required: false, autofocus: true, label: '이메일' %>
        <%= f.input :password, required: false, label: '비밀번호' %>
      </div>

      <div class="d_rememberbox">
        <span></span><%= f.input :remember_me, label: '로그인 유지', id: 'cb1', as: :boolean if devise_mapping.rememberable? %>
      </div>
      
      <div class="d_button">
        <div class="form-actions">
          <%= f.button :submit, "로그인", class:"btn btn-primary" %>
        </div>
      </div>
  <% end %>
  
    <div class="d_link2">
      <%= render "devise/shared/links" %> | <a href="mailto:sahmyook@likelion.org" class="find_pw" target="_blank">비밀번호 찾기</a><br /><br />
      <%= link_to "메인으로", posts_path %>
    </div>
  </div>
</div>
<script>
  $('.find_pw').on('click', function(){
    alert('이이디 및 비밀번호 관련 문의는 sahmyook@likelion.org로 주시길 바랍니다:)');
  });
</script>
