<div class="card my-4">
  <div class="card-body cate">
    <div class="row">
      <div class="col-lg-12">
        <h5 class="widget-title">최근 글</h5>
        <hr>
        <ul>
          <% @categories_10.each do |cate| %>
            <li>
              <a href="/posts/<%= cate.id %>"><h4 class="etc"><%= cate.title %></h4><div class="cate-info"><%= cate.user.name %> | <%= cate.category %> | <%= cate.created_at.strftime("%Y.%m.%d. %H:%M") %></div></a> 
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>