        <% @posts_n.each do |post| %>
        <a href="/posts/<%= post.id %>" class="card-con col-md-6">
          <div class="card mb-4">
            <div class="card-body">
              <div class="card-title">
                <div class="card-cate" id="cnoti"><%= post.category %></div>
