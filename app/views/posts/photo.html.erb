<!-- Navigation -->
<%= render 'nav' %>

<!-- Page Content -->
<div class="container_wrap">
  
  <div class="container">
    
      <!-- Blog Entries Column -->
      <div class="col-md-12 title"> 
        <h1 class="title-custom">활동 사진</h1>
        <hr/>
      </div>
      
      <div class="row">    
        <!--<div class="col-md-8">   -->
          <!--첫 포스트작성-->
          <% if Post.count == 0 %>
            <%= render 'nullpost' %>
          <% else %>  
            <%= render 'nullpost2' %>
          <% end %>
          
          <!--<div class="post-box">  -->
          <% @posts.each do |post| %>
              <a href="/posts/<%= post.id %>" class="card-con col-md-4">
                <div class="card mb-4">
                  <div class="card-body">
                    <div class="card-title">
                        <%= content_tag(:div, post.content.html_safe, :class => "panel-body") %>
                        <hr class="margin-b0">
                        <% if post.attachment.present? %>
                        <h1 class="title etc text-center ft-18">
                          <%= post.title %>
                        <img class='attach-icon' src='/assets/attachment-clip.svg'/>
                        </h1>
                        <% else %>
                        <h1 class="title etc text-center ft-18"><%= post.title %></h1>
                        <% end %>
                        <div class="post-info text-center">
                            <%= post.created_at.strftime("%Y년 %m월 %d일") %> <!--|--> <%#= link_to "0 댓글", post, class: 'comment-link-marker', data: { "disqus-url": post_url(post) } %>
                        </div>
                    </div>
                  </div>
                </div>
              </a>
          <% end %>
          <!--</div>-->
          
          
        <!--</div>-->

        <!-- Sidebar Widgets Column -->
        <%#= render 'posts/side_widget/side-widget-search' %>
      
        <!-- /.row -->  
        </div>
    
        <!-- Pagination -->
          <ul class="pagination justify-content-center mb-4">
            <li>
              <%= paginate @posts %>
            </li>
          </ul>
  <!-- /.container -->
  </div>
   
<!-- /.container-wrap -->  
</div> 
  
<!-- Footer -->
<%= render 'footer' %>
